package component

templ GuessButton() {
    <input
        type="submit"
        value="GUESS"
        hx-post="/guess"
        hx-target="#guess-results"
        hx-swap="beforeend"
        x-on:click="guessCount--; 
            $nextTick(() => { 
                searchText = '';
                document.getElementById('searchBar').value = '';
            })
        "
        x-ref="guessButton"
    />
}
